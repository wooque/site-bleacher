{
    "env": {
        "webextensions": true,
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": "warn",
        "no-debugger": "warn",
        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "^_"
            }
        ]
    },
    "globals": {
        "isFirefox": true,
        "getCookies": true,
        "getCurrentTab": true,
        "cookieDomain": true,
        "parseUrl": true,
        "normalizeDomain": true,
        "getDomain": true,
        "baseDomain": true,
        "isWebPage": true,
        "getCookiesForUrl": true,
        "byId": true,
        "cleanRule": true,
        "domainToRule": true,
        "saveWhitelist": true,
        "getWhitelist": true
    }
}
